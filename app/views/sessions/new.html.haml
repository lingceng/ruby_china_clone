%section#sign_in.box
  %h1 登录
  = form_tag sessions_path, method: :post, role: "form", class: "form-horizontal" do
    .form-group
      = label_tag :username, "用户名", class: "col-sm-3 control-label"
      .col-sm-5
        = text_field_tag :username, nil, class: "form-control", placeholder: "输入用户名"
    .form-group
      = label_tag :password, "密码", class: "col-sm-3 control-label"
      .col-sm-5
        = password_field_tag :password, nil, class: "form-control", placeholder: "密码"
    .col-sm-offset-3.col-sm-5
      %input(type="submit" value="登录" class="btn btn-default")

%section#sidebar
  %section#has_account.box
    %h2 还没有帐号?
    = link_to "注册", sign_up_path
